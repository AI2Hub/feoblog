{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es2020",
            "webworker"
        ]
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
